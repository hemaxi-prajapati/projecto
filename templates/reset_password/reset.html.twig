{% extends 'base.html.twig' %}

{% block title %}
	Reset your password
{% endblock %}

{% block body %}
	<div class="container">
		<div class="d-flex flex-column mt-3">
			<h1>Reset your password</h1>
			<div class="card">
				<div class="card-body">
					{{ form_start(resetForm) }}
					{{ form_row(resetForm.plainPassword) }}
					<button class="btn btn-primary">Reset password</button>
					{{ form_end(resetForm) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
