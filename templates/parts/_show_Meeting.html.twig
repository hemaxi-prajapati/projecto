{# meeting Object in tabular form #}
{% if pagerFanta is defined %}
	{% set checkCount = pagerFanta.nbResults %}
{% else %}
	{% set checkCount = meetings|length %}
{% endif %}
{% if checkCount > 0 %}
	<div class="container-fluid  mt-5">
		<div class="mt-3">
			<table class=" table-hover table table-bordered">
				<thead>
					<tr>
						<th scope="col">Sr</th>
						<th scope="col">Meeting ID</th>
						<th scope="col">Subject</th>
						<th scope="col">View</th>
					</tr>
				</thead>
				<tbody>
					{% set count = 1 %}
					{% for meeting in meetings %}
						<tr>
							<th scope="row">{{ count }}</th>
							<td>{{ meeting.id }}</td>
							<td>{{ meeting.subject }}</td>
							<td>
								<a href="{{ path('view_single_meeting', { meetingId: meeting.id }) }}" class="btn btn-primary">View</a>
							</td>
						</tr>
						{% set count = count + 1 %}
					{% endfor %}
				</tbody>
			</table>

			{{ pagerfanta(meetings) }}
		</div>
	</div>
{% else %}
	<div class="alert alert-danger" role="alert">
		Oops! No meetings found.
	</div>
{% endif %}
