{# this templet renders Array of daily Attendance Object #}
<div class="mt-3">
	{% if allAttendance.nbResults <= 0 %}

		<div class="alert alert-info" role="alert">
			Opps!!! No data till now
		</div>
	{% else %}
		<table class=" table-hover table table-bordered">
			<thead>
				<tr>
					<th scope="col">Sr</th>
					{% if is_granted(constant("App\\Entity\\User::ROLE_TEAM_MANAGER")) or is_granted(constant('App\\Entity\\User::ROLE_PROJECT_MANAGER')) %}
						<th scope="col">User ID</th>
						<th scope="col">User Name</th>
						<th scope="col">User Department</th>
					{% endif %}
					<th scope="col">Timer</th>
					<th scope="col">Date</th>
					<th scope="col">View</th>
				</tr>
			</thead>
			<tbody>
				{% for Attendance in allAttendance %}
					<tr class="expandable-row{{ Attendance.userId == app.user.id ? ' table-primary' : '' }}" data-user-id="{{ users[Attendance.userId].id }}" data-row-id="{{ Attendance.create }}" style="cursor: pointer">
						<th scope="row">{{ loop.index }}</th>
						{% if is_granted(constant("App\\Entity\\User::ROLE_TEAM_MANAGER")) or is_granted(constant('App\\Entity\\User::ROLE_PROJECT_MANAGER')) %}
							<td>{{ users[Attendance.userId].id }}</td>
							<td>{{ users[Attendance.userId].name }}</td>
							<td>{{ users[Attendance.userId].department.name }}</td>
						{% endif %}
						<td>{{ Attendance.timer | date("H:i:s") }}</td>
						<td>{{ Attendance.create | date("d/m/Y") }}</td>
						<td class="expandable-trigger">
							<i class="fas fa-plus" style="color: #3272e2;"></i>
						</td>
					</tr>
					<tr class="expanded-row">
						<td colspan="6">
							<div class="expanded-content" style="display: none;"></div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		{{ pagerfanta(allAttendance) }}

	{% endif %}
</div>
