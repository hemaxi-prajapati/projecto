{% extends 'base.html.twig' %}

{% block title %}
	Login Page | Projecto
{% endblock %}

{% block body %}
	{% if error %}
		<div class="alert alert-danger alert-dismissible fade show" role="alert">
			{{ error.messageKey|trans(error.messageData, 'security') }}
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	{% endif %}

	<section class="vh-100">
		<div class="container py-5 h-100">
			<div class="row card d-flex align-items-center justify-content-center h-100">
				<div class="col-md-8 col-lg-7 col-xl-6">
					<img src="{{ asset('images/login-page.jpg') }}" class="img-fluid" alt="Phone image">
				</div>
				<div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
					<div class="card">
						<div class="card-body p-md-5">
							<form action="{{ path('app_login') }}" method="post">
								<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign in</p>
								<div class="mb-4">
									<label for="username" class="form-label">Email address</label>
									<input type="email" id="username" name="_username" value="{{ last_username }}" class="form-control form-control-lg">
								</div>
								<div class="mb-4">
									<label for="password" class="form-label">Password</label>
									<input type="password" id="password" name="_password" class="form-control form-control-lg">
									<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
								</div>
								<div class="d-flex justify-content-between align-items-center mb-4">
									<div class="form-check">
										<input class="form-check-input" type="checkbox" name="_remember_me" value="" id="rememberMe" checked>
										<label class="form-check-label" for="rememberMe">
											Remember me
										</label>
									</div>
									<a href="{{ path('app_forgot_password_request') }}">Forgot password?</a>
								</div>
								<button type="submit" class="btn btn-primary btn-lg btn-block w-100">Sign in</button>
								<div class="divider d-flex align-items-center my-4">
									<p class="text-center fw-bold mx-3 mb-0 w-100 text-muted">OR</p>
								</div>
								<a href="{{ path('app_login_microsoft') }}" class="btn btn-primary btn-lg btn-block w-100" style="background-color: #3b5998">
									<img src="{{ asset('images/msoffice-logo.svg') }}" width="30" alt="Microsoft Office Logo">
									Log in with MS Office
								</a>
								<a href="{{ path('app_login_google') }}" class="btn  mt-2 btn-light btn-lg btn-block w-100" >
									<img src="{{ asset('images/google_logo.png') }}" width="30" alt="Google  Logo">
									Log in with Google
								</a>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
